generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HomePage {
  id          Int    @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  
  /// 區塊一：包含標題、內文、日期標籤、地點等資料
  section1    Json      
  
  /// 區塊二：卡片列表，建議以陣列形式儲存每個卡片的資料（年份、日期、內容等）
  section2    Json      
  
  /// 區塊三：時間相關資訊，包含各種時間、延長時間、會議與晚宴等
  section3    Json      
  
  /// 區塊四：手冊下載網址與圖片資料，圖片可另存 URL 與其他 metadata
  section4    Json      
  
  /// 區塊五：影片連結資料
  section5    Json      
  
  /// 區塊六：主辦單位、承辦單位與協辦單位等資料
  section6    Json      
}

model VideoPage{
  id Int @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  section1    Json      
}

model PaperPage{
  id Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  section1 Json
  section2 Json
  section3 Json
  section4 Json
}

model ExhibitionPage {
  id Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  section1 Json
  section2 Json
}

model Host {
  id Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  section1    Json  
}

model Event {
  id Int @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  section1 Json
}



